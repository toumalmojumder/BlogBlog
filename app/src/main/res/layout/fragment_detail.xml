<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Fragment.DetailFragment"
    android:background="@drawable/ctr_bg"
    android:theme="@style/Theme.Design.NoActionBar"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:fitsSystemWindows="true"
        android:theme="@style/DetailView"
        android:background="@drawable/ctr_bg"

        >
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:title="Title"
            android:id="@+id/title_detail"
           android:background="@drawable/ctr_bg"


            >
            <ImageView
                android:layout_width="320dp"
                android:layout_height="200dp"
                android:src="@drawable/beach"
                android:scaleType="centerCrop"
                android:layout_gravity="center|end"
                android:layout_marginBottom="15dp"
                app:layout_collapseMode="parallax"
                android:id="@+id/cover_detail"
                />
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_collapseMode="pin"
                />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:background="@drawable/layout_bg"
        android:padding="20dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/avater_detail"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/profile_image"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_bias="0"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/name_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="18sp"
                android:textColor="#000"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/avater_detail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/avater_detail"
                app:layout_constraintTop_toTopOf="@+id/avater_detail"
                />

            <TextView
                android:id="@+id/category_detail"
                android:layout_width="115dp"
                android:layout_height="81dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="category_detail"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/avater_detail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/avater_detail"
                app:layout_constraintTop_toTopOf="@+id/avater_detail"
                app:layout_constraintVertical_bias="0.0"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/profession_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="profession_detail"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/avater_detail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/avater_detail"
                app:layout_constraintTop_toBottomOf="@+id/name_detail"
                app:layout_constraintVertical_bias="0"
                />
            <TextView
                android:id="@+id/desc_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="14sp"
                app:layout_constraintVertical_bias="0"
                android:layout_marginTop="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/category_detail"
                app:layout_constraintStart_toStartOf="@+id/avater_detail"
                app:layout_constraintTop_toBottomOf="@+id/avater_detail"
                android:textColor="@color/black"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>